
<div style="display:flex;">
    @if (TitleWidth > 0)
    {
        <div style="flex:1;">
            @Title
        </div>
    }
    <div style="flex:1;">
        @Control
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment Title { get; set; }
    [Parameter]
    public RenderFragment Control { get; set; }
    [Parameter]
    public int TitleWidth { get; set; } = 4;
}
